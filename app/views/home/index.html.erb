<!-- app/views/downloads/index.html.erb -->
<div class="text-center site-title">
  <h1 class="display-title">Baixe sua música aqui</h1>
  <h2 class="display-subtitle text-center">Baixe suas músicas diretamente do youtube</h2>
</div>

<div class="mt-5 d-flex justify-content-center">
  <div class="card" style="width: 50rem;">
    <div class="card-body text-center">
      <p class="card-text text-center align-bottom">Insira o link do YouTube e seu email para receber a música</p>
      <%= form_with url: download_and_send_email_path, method: :post, local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.text_field :youtube_url, class: 'text-center form-control', placeholder: 'https://www.youtube.com/...', id: 'youtube_url_text_field' %>
        </div>
        <div class="form-group mb-3">
          <%= form.email_field :email, class: 'text-center form-control', placeholder: 'seu_email@example.com', id: 'email_text_field' %>
        </div>
        <div class="form-group">
          <%= form.submit 'Baixar e Enviar Música', class: 'btn btn-danger btn-lg d-inline-flex', id: 'submit-btn' do %>
            <span class="m-1">Baixar música</span>
            <div id="spinning" class="spinner-border text-light d-none"></div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
